extends layout
block content
  
  // Navigation
  nav.navbar.navbar-default.navbar-fixed-top.bg-light-gray
    .container
      
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle(type='button' data-toggle='collapse' data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand.page-scroll(href='#page-top')
          img.img-responsive.hide#logo(src="//s3-us-west-2.amazonaws.com/ws-app/ws-logo.png")
      
      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li.hidden
            a(href='#page-top')
          li
            a.page-scroll(href='#services') #{__('Services')}
          li
            a.page-scroll(href='#about') #{__('About us')}
          li
            a.page-scroll(href='#contact') #{__('Contact')}
      // /.navbar-collapse
    // /.container-fluid
  
  // Header
  header
    .container.text-center
      img.big-logo(src="//s3-us-west-2.amazonaws.com/ws-app/ws-logo.png", style="max-width: 400px; margin: 120px 0 10px 0")
        
      .intro-text       
        //.intro-heading hope for the best, plan for the worst
        .intro-lead-in hope for the best, plan for the worst
        a.page-scroll.btn.btn-primary(href='#services') #{__('Discover more')}

  // Portfolio Section/
  section#services.bg-light-gray
    .container(style='margin-top: 50px')
      .row
        .col-lg-12.text-center
          h1.section-heading #{__('Our services')}
          
          //h3.section-subheading.text-muted #{__('This areas are the ones we are specialized')}
      .row(style='margin-bottom: 120px')
        .col-md-4.col-sm-6.portfolio-item
          a.portfolio-link(href='#servicesModal1' data-toggle='modal')
            .portfolio-hover
