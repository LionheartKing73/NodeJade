            img.img-responsive(src='//s3-us-west-2.amazonaws.com/ws-app/2.png' alt='')
          .portfolio-caption
            h5 #{__('Managed Security Services (MSS)')}
            //p.text-muted #{__('MSO & MSM')}
        .col-md-4.col-sm-6.portfolio-item
